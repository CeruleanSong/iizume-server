{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": ".",
	},
	"exclude": ["node_modules", "babel.config.js", "metro.config.js"],
    "include": [
        "./src/**/*"
    ]
}
